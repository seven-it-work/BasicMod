package basicmod.cards.attack;

import com.megacrit.cardcrawl.actions.AbstractGameAction;
import com.megacrit.cardcrawl.actions.common.DamageAction;
import com.megacrit.cardcrawl.actions.common.MakeTempCardInDiscardAction;
import com.megacrit.cardcrawl.cards.AbstractCard;
import com.megacrit.cardcrawl.cards.DamageInfo;
import com.megacrit.cardcrawl.cards.status.Burn;
import com.megacrit.cardcrawl.characters.AbstractPlayer;
import com.megacrit.cardcrawl.monsters.AbstractMonster;

import basicmod.cards.BaseCard;
import basicmod.util.CardStats;

public class EighteenDragonSubduingPalm1 extends BaseCard {
    public static final String ID = makeID(EighteenDragonSubduingPalm1.class.getSimpleName());

    private static final CardStats info = new CardStats(CardColor.RED, CardType.ATTACK, CardRarity.BASIC,
        CardTarget.ENEMY, 1);

    private static final int DAMAGE = 1;

    public EighteenDragonSubduingPalm1(){
        super(ID, info);
        setDamage(DAMAGE, DAMAGE);
        this.exhaust = true;
    }
    @Override
    public void use(AbstractPlayer p, AbstractMonster m) {
        addToBot(new DamageAction(m, new DamageInfo(p, damage, DamageInfo.DamageType.NORMAL), AbstractGameAction.AttackEffect.SLASH_VERTICAL));
        EighteenDragonSubduingPalm2 card = new EighteenDragonSubduingPalm2();
        if (this.upgraded){
            card.upgrade();;
        }
        this.addToBot(new MakeTempCardInDiscardAction(card, 1));
    }

    @Override
    public AbstractCard makeCopy() {
        return new EighteenDragonSubduingPalm1();
    }
}
